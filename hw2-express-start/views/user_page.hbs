<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

    {{#if isLoggedIn}}
        <h1> {{name}} </h1>
        <h3> age: {{age}} </h3>
        <p> login: {{login}} </p>
        <p> password: {{password}} </p>

        <button> <a style="text-decoration: none" href="/login"> log out </a> </button>

        <hr>
        <h3 style="text-align: center"> REGISTERED USERS: </h3>
        <hr>

        {{#each users}}
            <p style="text-align: center"> {{this.name}} - {{this.age}} </p>
        {{/each}}

        {{else}}
            <h3 style="color: darkred"> you are not logged in </h3>
    {{/if}}

</body>
</html>
